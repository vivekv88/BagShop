<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <%- include('./partials/header') %>

    <div class="w-full flex flex-col lg:flex-row px-4 sm:px-6 md:px-12 lg:px-20 py-8">
        <!-- Sidebar -->
        <div class="w-full lg:w-[25%] mb-6 lg:mb-0">
            <div class="flex flex-col text-xl gap-3">
                <a class="hover:underline text-blue-600" href="#">All Products</a>
                <a class="hover:underline text-blue-600" href="/owners/createProducts">Create new product</a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="w-full lg:w-[75%] flex flex-col gap-6">
            <a class="text-white bg-red-600 px-5 py-3 rounded-lg text-center w-fit hover:bg-red-700 transition"
                href="/owners/deleteproducts">Delete all</a>

            <!-- Product Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                <% products.forEach(product => { %>
                <div class="bg-white rounded-2xl shadow-md overflow-hidden object-contain">
                    <div class="w-full h-[20vw]  p-4 bg-[<%= product.bgcolor %>]">
                        <% if (product.image) { %>
                        <img class="h-full sm:h-[100%] w-full object-cover rounded-md"
                            src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="Product Image" />
                        <% } else { %>
                        <p class="text-center text-gray-600">No image available</p>
                        <% } %>
                    </div>
                    <div
                        class="flex justify-between bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>] items-center px-4 py-3">
                        <div>
                            <h3 class="text-base font-semibold">
                                <%= product.name %>
                            </h3>
                            <h4 class="text-sm">â‚¹ <%= product.price %></h4>
                        </div>
                        <a class="w-8 h-8 flex items-center justify-center rounded-full bg-white text-black hover:bg-gray-200 transition"
                            href="#">
                            <i class="ri-add-line"></i>
                        </a>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>

    <%- include('./partials/footer') %>
</body>

</html>
