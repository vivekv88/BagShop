<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
</head>
<body>
    <%- include('./partials/header') %>
    <% user.cart.forEach(function(item){ %>
        <div class="w-full h-screen flex items-start px-20 py-20 gap-10">
            <div class="w-[30%] rounded-md bg-[<%= item.product.bgcolor %>] overflow-hidden">
                <div class="w-full flex justify-center items-center h-80">
                    <% if (item.product.image) { %>
                        <img class="h-[18rem]" src="data:image/jpeg;base64,<%= item.product.image.toString('base64') %>" alt="">
                    <% } else { %>
                        <p>No image available</p>
                    <% } %>
                </div>
                
                <div class="w-full bg-[<%= item.product.panelcolor %>] flex justify-between px-5 py-4">
                    <h3 class="text-2xl"><%= item.product.name %></h3>
                    <div class="flex items-center gap-2">
                        <a href="/increasequantity/<%= item.product._id %>"><i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i></a>
                        <div class="px-2 py-1 rounded-md bg-white text-black"><%= item.quantity %></div>
                        <a href="/decreasequantity/<%= item.product._id %>"><i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i></a>
                    </div>
                </div>
                <div class="flex text-[<%= item.product.textcolor %>] items-center justify-between px-5 py-3">
                    <h4 class="text-lg">Net Total</h4>
                    <h2 class="text-lg">₹ <%= Number(item.product.netamount) %></h2>
                </div>
            </div>
            <div class="w-[70%]">
                <h3 class="text-xl">Price Breakdown</h3>
                <div class="px-10 mt-5">
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Total MRP</h4>
                        <h4>₹ <%= (item.product.price) * (item.quantity) %></h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Discount on MRP</h4>
                        <h4>₹ <%= Number(item.product.discount)* (item.quantity) %></h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Platform Fee</h4>
                        <h4>₹ 20</h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Shipping Fee</h4>
                        <h4>FREE</h4>
                    </div>
                </div>
                <div class="w-full h-[1px] bg-black mt-10"></div>
                <div class="flex mt-5 mb-5">
                    <h3 class="w-1/3 text-xl">Total Amount</h3>
                    <h3 class="font-semibold text-xl text-green-600">₹ <%= Number(item.product.netamount) * (item.quantity) - (20*(item.quantity-1)) %> </h3>
                </div>
                <a href="/removefromcart/<%= item.product._id %>" class="btn btn-danger bg-blue-600 px-3 py-2 rounded-lg ">Remove</a>
            </div>
        </div>
    <% }) %>
    <%- include('./partials/footer') %>
</body>
</html>
