<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cart</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 text-gray-800">
  <%- include('./partials/header') %>

  <% user.cart.forEach(function(item){ %>
  <div class="w-full flex flex-col lg:flex-row items-start px-6 sm:px-10 lg:px-20 py-10 gap-8">
    
    <!-- Product Card -->
    <div class="w-full lg:w-1/3 rounded-xl shadow-lg bg-[<%= item.product.bgcolor %>] overflow-hidden">
      <div class="w-full flex justify-center items-center h-64 sm:h-72 md:h-80">
        <% if (item.product.image) { %>
          <img class="h-60 object-contain" src="data:image/jpeg;base64,<%= item.product.image.toString('base64') %>" alt="">
        <% } else { %>
          <p>No image available</p>
        <% } %>
      </div>

      <div class="w-full bg-[<%= item.product.panelcolor %>] flex flex-col sm:flex-row justify-between items-center px-5 py-4">
        <h3 class="text-xl font-semibold"><%= item.product.name %></h3>
        <div class="flex items-center gap-2 mt-3 sm:mt-0">
          <a href="/increasequantity/<%= item.product._id %>">
            <i class="w-8 h-8 bg-white rounded-full flex items-center justify-center ri-add-line"></i>
          </a>
          <div class="px-3 py-1 rounded-md bg-white text-black font-medium"><%= item.quantity %></div>
          <a href="/decreasequantity/<%= item.product._id %>">
            <i class="w-8 h-8 bg-white rounded-full flex items-center justify-center ri-subtract-line"></i>
          </a>
        </div>
      </div>

      <div class="flex justify-between px-5 py-3 text-[<%= item.product.textcolor %>] font-medium">
        <h4>Net Total</h4>
        <h2>₹ <%= Number(item.product.netamount) * (item.quantity) - (20*(item.quantity-1)) %></h2>
      </div>
    </div>

    <!-- Price Breakdown -->
    <div class="w-full lg:w-2/3 bg-white p-6 rounded-xl shadow-md">
      <h3 class="text-2xl font-bold mb-4">Price Breakdown</h3>
      <div class="space-y-3 text-lg font-medium">
        <div class="flex justify-between">
          <span>Total MRP</span>
          <span>₹ <%= (item.product.price) * (item.quantity) %></span>
        </div>
        <div class="flex justify-between">
          <span>Discount on MRP</span>
          <span>₹ <%= Number(item.product.discount)* (item.quantity) %></span>
        </div>
        <div class="flex justify-between">
          <span>Platform Fee</span>
          <span>₹ 20</span>
        </div>
        <div class="flex justify-between">
          <span>Shipping Fee</span>
          <span>FREE</span>
        </div>
      </div>
      <hr class="my-6" />
      <div class="flex justify-between text-xl font-semibold">
        <span>Total Amount</span>
        <span class="text-green-600">₹ <%= Number(item.product.netamount) * (item.quantity) - (20*(item.quantity-1)) %></span>
      </div>
      <div class="mt-6">
        <a href="/removefromcart/<%= item.product._id %>" class="inline-block bg-blue-600 text-white px-5 py-2 rounded-lg hover:bg-blue-700 transition">
          Remove
        </a>
      </div>
    </div>
  </div>
  <% }) %>

  <%- include('./partials/footer') %>
</body>

</html>
